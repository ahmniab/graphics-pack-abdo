<table class="table table-sm table-striped table-bordered text-center">
    <thead>
    <tr>
        <th>k</th>
        <th>P<sub>k</sub></th>
        <th>(x<sub>k+1</sub>, y<sub>k+1</sub>)</th>
        <th>2X<sub>k+1</sub></th>
        <th>2Y<sub>k+1</sub></th>
    </tr>
    </thead>
    <tbody>

    @if(ShapePoints.Any()){
        @for (int k = 0, i = 8; i < ShapePoints.Length; i += 8 , k++ )
        {
            <tr>
                <td>@k</td>
                <td>@ShapePoints[i].Pk</td>
                <td>(@ShapePoints[i].x, @ShapePoints[i].y)</td>
                <td>@(2 * @ShapePoints[i].x)</td>
                <td>@(2 * @ShapePoints[i].y)</td>
            </tr>
        }
    }
    else{
        <tr>
            <td colspan="5" class="text-center">
                No Points
            </td>
        </tr>
    }

    </tbody>
</table>

@code {
    [Parameter]
    public BresPointInfo[] ShapePoints { set; get; }
}